{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/apps/frontend/home.html"
    },
    {
      "src": "^/home$",
      "dest": "/apps/frontend/home.html"
    },
    {
      "src": "^/catalogo$",
      "dest": "/apps/frontend/catalogo.html"
    },
    {
      "src": "^/servicos$",
      "dest": "/apps/frontend/servicos.html"
    },
    {
      "src": "^/sobre$",
      "dest": "/apps/frontend/sobre.html"
    },
    {
      "src": "^/detalhes-produto$",
      "dest": "/apps/frontend/detalhes-produto.html"
    },
    {
      "src": "^/carrinho$",
      "dest": "/apps/frontend/carrinho.html"
    },
    {
      "src": "^/admin$",
      "dest": "/apps/frontend/admin/login.html"
    },
    {
      "src": "^/admin/login$",
      "dest": "/apps/frontend/admin/login.html"
    },
    {
      "src": "^/admin/dashboard$",
      "dest": "/apps/frontend/admin/dashboard.html"
    },
    {
      "src": "^/admin/products$",
      "dest": "/apps/frontend/admin/products.html"
    },
    {
      "src": "^/admin/produtos$",
      "dest": "/apps/frontend/admin/products.html"
    },
    {
      "src": "^/admin/product/new$",
      "dest": "/apps/frontend/admin/product-form.html"
    },
    {
      "src": "^/admin/product/edit/([a-zA-Z0-9-_]+)$",
      "dest": "/apps/frontend/admin/product-form.html"
    },
    {
      "src": "^/admin/product-form$",
      "dest": "/apps/frontend/admin/product-form.html"
    },
    {
      "src": "^/admin/categories$",
      "dest": "/apps/frontend/admin/categories.html"
    },
    {
      "src": "^/admin/categorias$",
      "dest": "/apps/frontend/admin/categories.html"
    },

    {
      "src": "^/public/(.*\\.css)$",
      "dest": "/apps/frontend/public/$1",
      "headers": {
        "cache-control": "public, max-age=3600, must-revalidate"  
      }
    },
    {
      "src": "^/public/(.*\\.js)$",
      "dest": "/apps/frontend/public/$1",
      "headers": {
        "cache-control": "public, max-age=3600, must-revalidate" 
      }
    },
    {
      "src": "^/public/(.*\\.(png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))$",
      "dest": "/apps/frontend/public/$1",
      "headers": {
        "cache-control": "public, max-age=86400" 
      }
    },
    
    {
      "src": "^/admin/([a-zA-Z0-9-_]+)\\.css$",
      "dest": "/apps/frontend/admin/$1.css",
      "headers": {
        "cache-control": "public, max-age=3600, must-revalidate"
      }
    },
    {
      "src": "^/admin/([a-zA-Z0-9-_]+)\\.js$",
      "dest": "/apps/frontend/admin/$1.js",
      "headers": {
        "cache-control": "public, max-age=3600, must-revalidate"
      }
    },
    
    {
      "src": "^/([a-zA-Z0-9-_]+)\\.html$",
      "dest": "/apps/frontend/$1.html"
    },
    {
      "src": "^/admin/([a-zA-Z0-9-_]+)\\.html$",
      "dest": "/apps/frontend/admin/$1.html"
    },
    {
      "src": "^/([a-zA-Z0-9-_]+)\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$",
      "dest": "/apps/frontend/$1.$2"
    },
    {
      "src": "^/public/(.*)$",
      "dest": "/apps/frontend/public/$1"
    },
    {
      "src": "^(.*)$",
      "dest": "/apps/frontend/home.html"
    }
  ],
  "env": {
    "API_URL": "https://upuniversestorege.onrender.com/api"
  }
}